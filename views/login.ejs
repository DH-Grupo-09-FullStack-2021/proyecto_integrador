<!DOCTYPE html>
<html lang="en">
<%- include('./head') %>
<body class="grey-bg-color-idx">
<%- include('./header') %>
    <main class="cuerpo">
		<% if (typeof errors != 'undefined') { %>
			<p style="color:red">ERROR</p>
			<ul>
				<% for (let i =0; i < errors.length;i++){ %>
					<li>
						<%=errors[i].msg%>
					</li>
					<% } %>
			</ul>
			<% } %>

	    <form class="flexbox-formulario" action="/login" method="POST">
	     	<div class="formulario-item">
	       		<label for="emailusuario">E-mail</label>
			</div>
			<div class="formulario-item">
	       		<input class="formulario-input-box" type="email" id="emailusuario"name="emailusuario">
	     	</div>
	     	<div class="formulario-item">
	       		<label for="contrasenausuario">Contrase√±a</label>
			</div>
			<div class="formulario-item">
	       		<input class="formulario-input-box" name="contrasenausuario" id="contrasenausuario" >
	     	</div>
	     	<div class="formulario-item">
	       		<input class="formulario-boton-enviar" type="submit" value="Login">
	     	</div>
	    </form>
		<section class="redes-sociales">
			<button id="sign-up-facebook" type="submit" value="Facebook"><i class="fab fa-facebook-square"></i> Ingresa con Facebook </button>
			<button id="sign-up-Google" type="submit" value="Google"><i class="fab fa-google"></i> Ingresa con Google </button>
			<button id="sign-up-Aple" type="submit" value="Apple"><i class="fab fa-apple"></i> Ingresa con Apple </button>
	   </section>

    </main>
<%- include('./footer') %>
    
</body>
</html>