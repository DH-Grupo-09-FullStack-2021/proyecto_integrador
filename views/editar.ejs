<!DOCTYPE html>
<html lang="en">
<%- include('./head') %>
<body class="grey-bg-color-idx">
<%- include('./header') %>
<main class="main">
<%if (locals.isUserLogged===true) {%>
	     <form method="POST" action="/products/<%= producto.id %>?_method=PUT" class="flexbox-formulario">
	     <div class="formulario-item formulario-label">
	       <label for="nombreproducto">Nuevo nombre del
	       Producto</label>
	       <% if (locals.errors && errors.nombreproducto) { %>
		<div class="formulario-warning">
		  <%= errors.nombreproducto.msg %>
		</div>
		<% } %>
	     </div><div class="formulario-item">
	       <input class="formulario-input-box" type="text"
	       id="nombreproducto" name="nombreproducto"
		 placeholder="<%=producto.name %>"
		 value="<%= locals.old && old.nombreproducto ? old.nombreproducto : producto.name %>" required="required">
	     </div>
	     <div class="formulario-item formulario-label">
	       <label for="fabricadorproducto">Fabricante</label>
	       <% if (locals.errors && errors.fabricadorproducto) { %>
		<div class="formulario-warning">
		  <%= errors.fabricadorproducto.msg %>
		</div>
		<% } %>
	     </div><div class="formulario-item">
	       <input class="formulario-input-box" type="text" id="fabricadorproducto"
	       name="fabricadorproducto"
		 placeholder="<%=producto.maker %>"
		 value="<%= locals.old && old.fabricadorproducto ? old.fabricadorproducto : producto.maker %>" required="required">
	     </div>
	     <div class="formulario-item formulario-label">
	       <label for="descprod">Descripci√≥n del producto</label>
	       <% if (locals.errors && errors.descprod) { %>
		<div class="formulario-warning">
		  <%= errors.descprod.msg %>
		</div>
		<% } %>
	     </div><div class="formulario-item">
	       <input class="formulario-input-box" type="text"
		 name="descprod" id="descprod"
		 placeholder="<%=producto.desc %>"
		 value="<%= locals.old && old.descprod ? old.descprod : producto.desc %>" required="required">
	     </div>  
	     <div class="formulario-item formulario-label">
	       <label for="valorproducto">Nuevo precio</label>
	       <% if (locals.errors && errors.valorproducto) { %>
		<div class="formulario-warning">
		  <%= errors.valorproducto.msg %>
		</div>
		<% } %>
	     </div><div class="formulario-item">
	       <input class="formulario-input-box" type="number"
		 name="valorproducto" id="valorproducto"
		 placeholder="<%=producto.price %>"
		 value="<%= locals.old && old.valorproducto ? old.valorproducto : producto.price %>" required="required">
	     </div>
	     <div class="formulario-item">
	       <input class="formulario-boton-enviar" type="submit"
	       value="Actualizar Producto">
	     </div>
	     </form>
	     <% } else { %>
	     <div class="formulario-label">Error: 401. Registrese para
	       acceder a esta pagina.</div>
	     <% } %>
    </main>
<%- include('./footer') %>
    
</body>
</html>
