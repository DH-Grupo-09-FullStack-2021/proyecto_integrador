<!DOCTYPE html>
<html lang="en">
<%- include('./head') %>
<link rel="stylesheet" href="../css/style.css"/>
<link rel="stylesheet" href="../css/carrousel.css"/>
<link rel="stylesheet" href="../css/carrito.css"/>
<link rel="stylesheet" href="../css/register.css"/>
<link rel="stylesheet" href="../css/responsive.css"/>
<body class="grey-bg-color-idx">
<%- include('./header') %>
<main class="main">
<div class="contenedor-carrito">
    
<div class="productos-main caja-prod-carrito">
  <img src="../img/<%= product.img %>" class='img-main'>
	</div>
	  <div class="display-texto-caja-carrito">
	    <%= product.name %>
	  <div class="carrito-texinfo-box">
	    <%= product.desc %>
<br><br>
	    Fabricante: <%= product.maker %>
	  </div>

	  <div class="carrito-total-flexbox">
	    Precio
  	    <div class="carrito-total-a-pagar">
	      $ <%= product.price %>
	    </div>
	  </div>
	  </div>
    </div>
    </div>
    	       <div class="display-texto-caja-prod">
	       Productos Relacionados
	       </div>
    	     <article class="productos-main">
	       <% for (let i = 0; i < productos_lista.length; i++) { %>
    <a href="/product/<%= productos_lista[i].id %>" class="CajaProductos-main">
        <img src="../img/<%= productos_lista[i].img %>" class='img-main'>
        <h3><strong><%= productos_lista[i].name %></strong></h3>
        <div class="texto-producto-inicio"><%= productos_lista[i].desc %></div>
        <h2><strong>$ <%= productos_lista[i].price %></strong></h2>
    </a>
	<% } %>
    </article>
    </main>
<%- include('./footer') %>
    
</body>
</html>